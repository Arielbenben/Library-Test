@model Library.ViewModels.BookVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BookVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <input asp-for="Genre" value="@ViewBag.Genre" class="form-control" />
            </div>
            <div class="form-group" hidden>
                <input asp-for="SetId" value="@ViewBag.SetId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Width" class="control-label"></label>
                <input asp-for="Width" class="form-control" />
                <span asp-validation-for="Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />

                @if(ViewBag.TenMore != null)
                {
                    <h1>You have ten santimeter more</h1>
                }

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <ul>
                            @foreach (var modelState in ViewData.ModelState.Values)
                            {
                                @foreach (var error in modelState.Errors)
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            }
                        </ul>
                    </div>
                }
                
            </div>
        </form>
    </div>
</div>

<div>
    @* @Html.ActionLink("Back to List", "Index", new { setId = ViewBag.SetId }) *@
    <a asp-action="Index" asp-route-setId="@ViewBag.SetId">Back to List</a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
